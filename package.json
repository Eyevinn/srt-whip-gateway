{
  "name": "@eyevinn/srt-whip-gateway",
  "version": "0.4.0",
  "description": "SRT WHIP Gateway Service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --project ./",
    "build:ui": "parcel build src/ui/index.html",
    "dev": "NODE_ENV=development tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node --inspect ./dist/server.js\"",
    "dev:ui": "parcel -p 1234 --no-cache src/ui/index.html",
    "server": "node ./dist/server.js",
    "start": "npm run server",
    "postversion": "git push && git push --tags",
    "lint": "eslint . --ext .ts",
    "test": "jest"
  },
  "targets": {
    "main": false,
    "default": {
      "distDir": "./dist/ui",
      "publicUrl": "/ui"
    }
  },
  "author": "Eyevinn Technology <work@eyevinn.se>",
  "contributors": [
    "Jonas Birm√© <jonas.birme@eyevinn.se> (Eyevinn Technology AB)"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@swc/core": "^1.13.21",
    "@types/jest": "^29.2.1",
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.2",
    "mock-spawn": "^0.2.6",
    "parcel": "^2.7.0",
    "prettier": "2.7.1",
    "ts-jest": "^29.4.5",
    "tsc-watch": "^5.0.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/cors": "^8.1.1",
    "@fastify/static": "^6.5.0",
    "@fastify/swagger": "^8.1.0",
    "@fastify/swagger-ui": "^1.2.0",
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "0.24.1",
    "fastify": "^4.9.2",
    "winston": "^3.8.2"
  }
}
